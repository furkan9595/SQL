SELECT 
CASE 
WHEN DATEPART(DW,GETDATE())=1 THEN 'PAZARTESİ'
WHEN DATEPART(DW,GETDATE())=2 THEN 'SALI'
WHEN DATEPART(DW,GETDATE())=3 THEN 'ÇARŞAMBA'
WHEN DATEPART(DW,GETDATE())=4 THEN 'PERŞEMBE'
WHEN DATEPART(DW,GETDATE())=5 THEN 'CUMA'
WHEN DATEPART(DW,GETDATE())=6 THEN 'CUMARTESİ'
WHEN DATEPART(DW,GETDATE())=7 THEN 'PAZAR'
END AS DAYOFWEEKS
