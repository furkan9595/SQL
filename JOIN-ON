JOIN-ON : 

BİRDEN FAZLA TABLOLARI BİRLEŞTİREREK SORGULAMA YAPAR  
ÖRNEK : 
SELECT A.KOLON1,A.KOLON2 FROM TABLO1 A JOIN TABLO2 B ON A.PK_KOLON=B.FK_KOLON

ÖRNEK :
SELECT *FROM USERS U , COUNTRIES CO  JOIN CITIES CI ON CO.ID=CI.COUNTRY_ID WHERE U.ID=5

ÖRNEK : 
SELECT U.* FROM USERS U JOIN ADRESS A ON A.USER_ID=U.ID

ÖRNEK : 
SELECT  U.NAMESURNAME AS İSİM_SOYİSİM,
U.EMAIL EMAİL_ADRESİ,
CO.COUNTRY ÜLKE,
A.[ADRESS+TEXT] ADRES 

ÖRNEK :
FROM USERS U JOIN ADRESS A 
ON A.USER_ID=U.ID JOIN COUNTRIES CO ON 
A.COUNTRY_ID=CO.ID

ÖRNEK : 
SELECT  U.NAMESURNAME AS İSİM_SOYİSİM,
U.EMAIL EMAİL_ADRESİ,
CO.COUNTRY ÜLKE,
A.[ADRESS+TEXT] ADRES ,
T.TOWN İLÇELER ,
D.DISTRICT KÖY

ÖRNEK :
FROM USERS U JOIN ADRESS A 
ON A.USER_ID=U.ID JOIN COUNTRIES CO ON 
A.COUNTRY_ID=CO.ID
JOIN TOWNS T ON T.ID=A.TOWN_ID
JOIN DISTRICTS D ON D.ID=A.DISTRICT

 




