SUBSTRING
DECLARE @KELIME AS VARCHAR(100) SET @KELIME='MERHABA DUNYA'

SELECT SUBSTRING(@KELIME,1,7)


-------------------------------------------------------------
LOWER  VE UPPER
DECLARE @KELIME AS VARCHAR(100) SET @KELIME='MERHABA DUNYA'


SELECT LOWER(@KELIME)
SELECT UPPER(@KELIME)
STRING BIRLEŞTİRME
--STRING BIRLEŞTİRME
DECLARE @ISIM AS VARCHAR(100) SET @ISIM='FURKAN'
DECLARE @SOYAD AS VARCHAR(100) SET @SOYAD='KALKAN'
SELECT @ISIM +' '+@SOYAD

--- RIGHT ,LEFT
DECLARE @KELIME AS VARCHAR(100) SET @KELIME='MERHABA DUNYA'
SELECT LEFT(@KELIME,10)

DECLARE @KELIME AS VARCHAR(100) SET @KELIME='MERHABA DUNYA'
SELECT RIGHT(@KELIME,10)

--- LTRIM,RTRIM,TRIM
DECLARE @DATA AS VARCHAR(100) SET @DATA='     BU DUNYALAR SENIN OLSA NE OLUR OLMASA NE OLUR  '

SELECT @DATA
SELECT LTRIM(@DATA) AS LTRIMM
SELECT RTRIM(@DATA) AS RTRIMMM
SELECT TRIM(@DATA) AS HERIKI_YONTRIM
-- REPLACE 

DECLARE @KELIME AS NVARCHAR(100) SET @KELIME='MERHABA DÜNYA'
SELECT REPLACE(@KELIME,'Ü','U')

DECLARE @KELIME AS NVARCHAR(100) SET @KELIME='MERHABA DÜNYA'
SELECT REPLACE(@KELIME,'MERHABA','HELLO')
DECLARE @KELIME AS NVARCHAR(100) SET @KELIME='MERHABA DÜNYA'
SELECT REPLACE(REPLACE(@KELIME,'MERHABA','HELLO'),'DÜNYA','WORLD')
---LEN
DECLARE @KELIME1 AS VARCHAR(100) SET @KELIME1='MERHABA DÜNYA'
SELECT LEN(@KELIME1)

DECLARE @KELIME AS VARCHAR(100) SET @KELIME='MERHABA DÜNYA'
SELECT LEN('MERHABA DÜNYA')
---STRING SPLIT
DECLARE @KELIME2 AS VARCHAR(100)='MERHABA DÜNYA'
SELECT *FROM string_split(@KELIME2,' ')
