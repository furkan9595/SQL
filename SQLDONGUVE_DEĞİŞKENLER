USE TEST
GO
 
 DECLARE @AD AS VARCHAR(100)
 DECLARE @SOYAD AS VARCHAR(100)
 DECLARE @CINSIYET AS VARCHAR(1)
 DECLARE @DOĞUMTARIHI AS DATE
 DECLARE @YAS AS INT
 DECLARE @YAŞGRUBU AS VARCHAR(50)
 DECLARE @I AS INT=0

 WHILE @I <1000
 BEGIN 
SELECT @AD=NAME   , @CINSIYET=CINSIYET FROM ISIMLER WHERE ID=ROUND(RAND()*611,0) 

SELECT @SOYAD=SOYAD FROM SOYAD   WHERE ID=ROUND(RAND()*611,0)  
SET @DOĞUMTARIHI=DATEADD(DAY,ROUND(RAND()*18250,0),'1950-01-01')
SET @YAS=DATEDIFF(YEAR,@DOĞUMTARIHI,GETDATE())

IF @YAS BETWEEN 10 AND 20
	SET @YAŞGRUBU='20 YAŞ ALTI'
IF @YAS BETWEEN 30 AND 40
	SET @YAŞGRUBU='30-40 YAŞ ARASI ARASI'
IF @YAS BETWEEN 40 AND 50
	SET @YAŞGRUBU='40-50 YAŞ ARASI ARASI'
IF @YAS BETWEEN 50 AND 60
	SET @YAŞGRUBU='50-60 YAŞ ARASI ARASI'
IF @YAS BETWEEN 60 AND 70
	SET @YAŞGRUBU='60-70 YAŞ ARASI ARASI'
IF @YAS BETWEEN 70 AND 80
	SET @YAŞGRUBU='70-80 YAŞ ARASI ARASI'
IF @YAS BETWEEN 80 AND 90
	SET @YAŞGRUBU='80-90 YAŞ ARASI ARASI'
IF @YAS BETWEEN 90 AND 100
	SET @YAŞGRUBU='90-100 YAŞ ARASI ARASI'
 
 
INSERT INTO KISILER (AD,SOYAD,CINSIYET,DOĞUMTARİHİ,YAŞ,YAŞGRUBU) VALUES
 (@AD,@SOYAD,@CINSIYET,@DOĞUMTARIHI,@YAS,@YAŞGRUBU)
  
SET @I=@I+1
END
 

 SELECT *FROM KISILER
