 ORNEK : 
 
 IF EXISTS(SELECT *FROM CITIES WHERE CITY='ADANALAR')
BEGIN 
PRINT('KAYIT BULUNDU')
END
ELSE
BEGIN 
PRINT('KAYIT BULUNAMADI AMA EKLENDİ')
INSERT INTO CITIES (COUNTRY_ID,CITY) VALUES (1,'ADANALAR')
END 

SELECT CITY FROM CITIES WHERE CITY='ADANALAR'


IF ELSE İLE VERİ SİLME : 

IF EXISTS(SELECT *FROM CITIES WHERE CITY='ADANALAR')
BEGIN 
PRINT('KAYIT BULUNDU')
DELETE FROM CITIES WHERE CITY='ADANALAR'
END
ELSE
BEGIN 
PRINT('KAYIT BULUNAMADI  ')
END 

SELECT CITY FROM CITIES WHERE CITY='ADANALAR




















