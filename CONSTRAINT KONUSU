UNIQUE CONSTRAINT : OLUŞTURDUĞUMUZ TABLODA İSTEDİĞİMİZ ALANLARI BENZERSİZ BİR DEĞER GİRİLECEK ŞEKİLDE AYARLAMA İŞİNE YARAR.

TABLO OLUŞTURDUK : 
CREATE TABLE EXAMPLES 
(
ID INT PRIMARY KEY , 
NAME VARCHAR(50), 
SURNAME VARCHAR(50),
AGE INT
);

UNIQUE YAPTIK : 

ALTER TABLE EXAMPLES ADD CONSTRAINT YASI UNIQUE(AGE)

DEFAULT CONSTRAINT : MESELA TABLODA VERİ GİRMEDİĞİMİZDE OTOMATİK OLARAK VARSAYILAN DEĞER GİRİLMESİNİ SAĞLAYABİLİRİZ.

TABLO OLUŞTURDUK :
CREATE TABLE EXAMPLES_TABLES 
(
ID INT PRIMARY KEY , 
NAME VARCHAR(50), 
SURNAME VARCHAR(50),
AGEE INT
);

DEFAULT UNIQUE YAPTIK : 

ALTER TABLE EXAMPLES_TABLES ADD CONSTRAINT AGE DEFAULT  44 FOR AGE 

CHECK CONSTRAINT : TABLO İÇİNDE BULUNAN BAZI ALANLARA BİR KURAL UYGULAMAK İSTERSEK BUNU KULLANIRIZ
MESELA İLERİ OLAN BİR TARİHLİ BİR FATURA KESİLEMEMESİ GİBİ.

TALBO OLUŞTUR :

CREATE TABLE EXAMPLES_TABLESS 
(
ID INT PRIMARY KEY , 
NAME VARCHAR(50), 
SURNAME VARCHAR(50),
AGES INT
);

CHECK CONSTRAINT : 

ALTER TABLE EXAMPLES_TABLESS  ADD CONSTRAINT AGELER CHECK(AGES<=44)
 
